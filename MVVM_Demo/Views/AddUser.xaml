<Window x:Class="MVVM_Demo.Views.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Demo.Views"
        mc:Ignorable="d"
        Title="AddUser" Height="450" Width="391">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="50,53,0,0" VerticalAlignment="Top" Width="43"/>
        <TextBox x:Name="txtName" Text="{Binding Name}" HorizontalAlignment="Left" Margin="53,81,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="171" Height="33"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="54,123,0,0" VerticalAlignment="Top" Width="43" Height="24"/>
        <TextBox x:Name="txtEmail" Text="{Binding Email}" HorizontalAlignment="Left" Margin="55,151,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="171" Height="33"/>
        <Button Height="30" Command="{Binding AddUserCommand}"  Content="+ Add" Width="70"  VerticalContentAlignment="Center" Padding="5" Margin="0,0,16,25" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderThickness="1" BorderBrush="#E0E0E0" Background="Black" Foreground="White" RenderTransformOrigin="0.186,0.168" />

    </Grid>
</Window>
